<Project Sdk="MSTest.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net48;net9.0</TargetFrameworks>
    <LangVersion>preview</LangVersion>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Assembly Info -->
    <RootNamespace>cc.isr.VI.Tsp.K2600.MSTest</RootNamespace>
    <Description>Keithley 2600 Virtual Instrument unit tests</Description>

    <!-- Coding -->
    <OptionExplicit>On</OptionExplicit>
    <OptionCompare>Binary</OptionCompare>
    <OptionStrict>On</OptionStrict>
    <OptionInfer>Off</OptionInfer>

    <!-- Signature -->
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\..\items\keyPair.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>

    <!-- NuGet -->
    <IsPackable>false</IsPackable>

  </PropertyGroup>

  <!-- Assembly attributes -->
  <ItemGroup>
    <AssemblyAttribute Include="Microsoft.VisualStudio.TestTools.UnitTesting.DoNotParallelize"/>
    <AssemblyAttribute Include="System.CLSCompliantAttribute">
      <_Parameter1>false</_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.InteropServices.ComVisibleAttribute">
      <_Parameter1>false</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);MYPROJREF;</DefineConstants>
  </PropertyGroup>

  <Choose>
    <When Condition="$(DefineConstants.Contains(';PROJREF;')) OR $(DefineConstants.Contains(';MYPROJREF;'))">
      <ItemGroup>
        <ProjectReference Include="..\..\..\device\device.mstest\cc.isr.VI.Device.MSTest.csproj">
          <TreatAsUsed>true</TreatAsUsed>
        </ProjectReference>
        <ProjectReference Include="..\..\..\device\tsp.mstest\cc.isr.VI.Device.Tsp.MSTest.csproj">
          <TreatAsUsed>true</TreatAsUsed>
        </ProjectReference>
        <ProjectReference Include="..\k2600\cc.isr.VI.Tsp.K2600.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\..\..\device\device.mstest\cc.isr.VI.Device.MSTest.csproj">
          <TreatAsUsed>true</TreatAsUsed>
        </ProjectReference>
        <PackageReference Include="cc.isr.VI.Tsp.K2600" Version="8.0.8121" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DefineDebug>true</DefineDebug>
    <DefineTrace>true</DefineTrace>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DefineDebug>false</DefineDebug>
    <DefineTrace>true</DefineTrace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\..\items\ProductKey.cs" Link="Properties\ProductKey.cs" />
    <Compile Remove="standard\*.cs" Condition="'$(TargetFramework)' == 'net9.0'" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="CandidateResources.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>

    <Content Include="cc.isr.VI.Tsp.K2600.MSTest.Serilog.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="cc.isr.VI.Tsp.K2600.MSTest.Session.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="cc.isr.VI.Tsp.K2600.MSTest.Settings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <!-- Suppress warning about newton soft 9.0.1 which is part of the .net fx testing extensions code coverage.
      <NuGetAuditSuppress Include="https://github.com/advisories/GHSA-5crp-9r3c-p9vr" />
    -->
    <!-- Already included with the default profile of the MSTest.SDK
      <PackageReference Update="Microsoft.Testing.Extensions.CodeCoverage" />
    -->
  </ItemGroup>

  <ItemGroup>
    <!-- This attempts to prevent NU1605 error: 
       Warning As Error: Detected package downgrade: Microsoft.Testing.Extensions.CodeCoverage from 18.1.0 to 17.14.2.
       Reference the package directly from the project to select a different version. 
       cc.isr.VI.Device.Tsp.MSTest -> cc.isr.Std.MSTest -> Microsoft.Testing.Extensions.CodeCoverage (>= 18.1.0) 
       cc.isr.VI.Device.Tsp.MSTest -> Microsoft.Testing.Extensions.CodeCoverage (>= 17.14.2)    
    -->
    <PackageReference Update="Microsoft.Testing.Extensions.CodeCoverage" Version="18.1.0" />
    <!-- This attempts to prevent NU1605 error: 
        Warning As Error: Detected package downgrade: Microsoft.Testing.Extensions.TrxReport from 2.0.1 to 1.8.4.
        Reference the package directly from the project to select a different version. 
        cc.isr.VI.Device.Tsp.MSTest -> cc.isr.Std.MSTest -> Microsoft.Testing.Extensions.TrxReport (>= 2.0.1) 
        cc.isr.VI.Device.Tsp.MSTest -> Microsoft.Testing.Extensions.TrxReport (>= 1.8.4)
    -->
    <PackageReference Update="Microsoft.Testing.Extensions.TrxReport" Version="2.0.1" />

    <!-- This attempts to prevent CS0012 error: 
        The type 'TestContext' is defined in an assembly that is not referenced.
        You must add a reference to assembly 'Microsoft.VisualStudio.TestPlatform.TestFramework.Extensions, Version=14.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a'.
    -->
    <PackageReference Update="Microsoft.VisualStudio.TestPlatform.TestFramework.Extensions" Version="14.0.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net472' or '$(TargetFramework)'=='net48'">
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
  </PropertyGroup>

  <Import Project="..\k2600\version.build.props" />

</Project>
